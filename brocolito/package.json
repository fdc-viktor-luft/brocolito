{
  "name": "brocolito",
  "version": "3.0.0",
  "description": "Create type-safe CLIs to align local development and pipeline workflows",
  "main": "dist/brocolito.cjs",
  "module": "dist/brocolito.mjs",
  "types": "dist/brocolito.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "type": "module",
  "bin": {
    "brocolito": "./bin/build.js",
    "brocolito-bun": "./bin/build-bun.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fdc-viktor-luft/brocolito"
  },
  "keywords": [
    "CLI",
    "GitHub Actions"
  ],
  "author": "Viktor Luft <viktor.luft@freiheit.com> (https://github.com/fdc-viktor-luft)",
  "license": "MIT",
  "scripts": {
    "dist": "vite build && pnpm dist:ts",
    "dist:ts": "tsc -p tsconfig.publish.json",
    "lint": "pnpm lint:es && pnpm lint:ts",
    "lint:es": "eslint . --max-warnings 0",
    "lint:ts": "tsc",
    "test": "vitest --run",
    "test:update": "vitest --run -u"
  },
  "dependencies": {
    "@types/minimist": "^1.2.5",
    "@types/prompts": "^2.4.9",
    "minimist": "^1.2.8",
    "picocolors": "^1.0.0",
    "prompts": "^2.4.2",
    "vite": "^5.2.11"
  },
  "devDependencies": {
    "@types/node": "^20.12.11",
    "eslint": "^9.2.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.8.0",
    "vitest": "^1.6.0"
  }
}